<div class="public-stats d-flex">

    <!-- Sidebar -->
    <div class="navbar-nav bg-white sidebar sidebar-light accordion col-2 p-3 position-relative d-none d-md-flex flex-column" id="accordionSidebar">

        <ul class="position-sticky list-unstyled">
            <!-- Nav Item - Impact 1 -->
            <li class="nav-item">
                <a class="nav-link position-relative collapsed text-dark d-flex align-items-center" href="#impact1">
                    <span><b class="text-primary">1.</b> Partage du pouvoir et des décisions </span>
                </a>
            </li>

            <!-- Nav Item - Impact 2 -->
            <li class="nav-item">
                <a class="nav-link position-relative collapsed text-dark d-flex align-items-center" href="#impact2">
                    <span><b class="text-primary">2.</b> Pérennité économique et partage de la valeur créée</span>
                </a>
            </li>

            <!-- Nav Item - Impact 3 -->
            <li class="nav-item">
                <a class="nav-link position-relative collapsed text-dark d-flex align-items-center" href="#impact3">
                    <span><b class="text-primary">3.</b> Capital humain et qualité de vie au travail</span>
                </a>
            </li>

            <!-- Nav Item - Impact 4 -->
            <li class="nav-item">
                <a class="nav-link position-relative collapsed text-dark d-flex align-items-center" href="#impact4">
                    <span><b class="text-primary">4.</b> Impact environnemental, social et territorial</span>
                </a>
            </li>
        </ul>

    </div>
    <!-- End of Sidebar -->

    <div class="puclic-stats-body p-sm-5 w-100  me-4 ms-4">
        <header>
            <h1>Résultats pour l'année <%= @evaluation.annee %></h1>
        </header>

        <div class="d-flex flex-sm-row flex-column align-items-sm-center justify-content-between mt-5 mb-4">
          <div class="mb-3 mb-sm-0">
            <% if current_user.is_super_admin %>
              <%= link_to "Back to evaluations", evaluations_path, class: "btn btn-secondary me-3" %>
            <% else %>
              <%= link_to "Retourner au dashboard", user_root_path, class: "btn btn-secondary me-3" %>
            <% end %>
          </div>
        </div>

        <!-- IMPACT 1 -->

        <h3 id="impact1" class="mt-3 mt-sm-5">Partage du pouvoir et décisions</h3>

        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">I.</b> <u class="text-secondary text-decoration-none">Composition de la gouvernance</u></h4>

        <%= render "indicateurs_group", evaluation: @evaluation, group: @pouvoir_gouvernance_taux %>

        <% if @evaluation.indicateurs_list.pouvoir_gouvernance_diversite_categories.present? %>
        <div class="rounded shadow col-12 col-mb-5 p-0 overflow-hidden mb-5">
            <div class="bg-light fw-bold text-center p-3">Catégories d'associés : <%= @evaluation.indicateurs_list.pouvoir_gouvernance_diversite_categories.count %></div>
            <div class="bg-white m-0 p-2">
                <div class="d-flex p-3">
                    <% @evaluation.indicateurs_list.pouvoir_gouvernance_diversite_categories.each do |category| %>
                    <div class="card bg-success text-white border-0 mx-2">
                        <div class="card-body pt-2 pb-2 pe-3 ps-3">
                        <h5 class="card-title m-0"><%= category %></h5>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
        <% end %>

        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">II.</b> Mise en place des <u class="text-secondary text-decoration-none">conditions du bon exercice de la démocratie</u></h4>

        <% if @pouvoir_democratie_nombres.any? %>
        <div class="rounded shadow col-12 col-mb-5 p-0 overflow-hidden mb-5">
            <div class="bg-white m-0 p-2">
                <div class="d-flex">
                    <%= column_chart @pouvoir_democratie_nombres %>
                </div>
            </div>
        </div>
        <% end %>

        <div class="rounded shadow col-12 col-mb-5 p-0 overflow-hidden mb-5">
            <div class="bg-light fw-bold text-center p-3"><%= indicateur_clean :pouvoir_democratie_taux_participation_formations %></div>
            <div class="bg-white m-0 p-2">
                <div class="d-flex">
                    <%= single_value_pie_chart @evaluation.indicateurs_list.pouvoir_democratie_taux_participation_formations %>
                </div>
            </div>
        </div>

        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">III.</b> Participation à la <u class="text-secondary text-decoration-none">prise de décision stratégique</u></h4>

        <%= render "indicateurs_group", evaluation: @evaluation, group: @pouvoir_strategique_taux %>

        <!-- IMPACT 2 -->

        <h3 id="impact2" class="mt-3 mt-sm-5">Pérennité économique et partage de la valeur créée</h3>

        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">I.</b> Pérennité : <u class="text-secondary text-decoration-none">création de valeur, inaliénabilité et robustesse</u> de l'entreprise</h4>

        <%= render "indicateurs_group", evaluation: @evaluation, group: @valeur_perennite_taux %>

        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">II.</b> <u class="text-secondary text-decoration-none">Partage</u> des richesses</h4>

        <h5 class="mb-3 mb-sm-5 text-secondary font-italic text-uppercase">Avec les actionnaires/sociétaires</h5>

        <h5 class="text-secondary font-italic text-uppercase">Avec/entre les salariés</h5>

        <!-- IMPACT 3 -->

        <h3 id="impact3" class="mt-3 mt-sm-5">Capital humain et qualité de vie au travail</h3>
        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">I.</b> <u class="text-secondary text-decoration-none">Qualité de vie</u> au travail / <u class="text-secondary text-decoration-none">épanouissement</u> des salariés</h4>
        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5">
        <b class="text-primary">II.</b>  Développement des
        <u class="text-secondary text-decoration-none">compétences individuelles et collectives</u>
            <br/>
            <u class="text-secondary text-decoration-none">Emancipation</u> des salariés
            </h4>

        <!-- IMPACT 4 -->

        <h3 id="impact4" class="mt-3 mt-sm-5">Impact environnemental, social et territorial</h3>

        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">I.</b> Impact <u class="text-secondary text-decoration-none">environnemental</u></h4>
        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">II.</b> Impact <u class="text-secondary text-decoration-none">social</u></h4>
        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">III.</b> <u class="text-secondary text-decoration-none">Engagement</u> en faveur de <u class="text-secondary text-decoration-none">l'écosystème</u> et du <u class="text-secondary text-decoration-none">territoire</u></h4>



        <div class="d-flex flex-sm-row flex-column align-items-sm-center justify-content-between mt-5 pt-5 mb-4">
          <div class="mb-3 mb-sm-0">
            <% if current_user.is_super_admin %>
              <%= link_to "Back to evaluations", evaluations_path, class: "btn btn-secondary me-3" %>
            <% else %>
              <%= link_to "Retourner au dashboard", user_root_path, class: "btn btn-secondary me-3" %>
            <% end %>
          </div>
        </div>
    </div>


</div>
