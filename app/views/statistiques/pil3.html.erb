<div class="public-stats">
    <header class="container-fluid">
        <h1 class="h2 bg-secondary m-0 text-light text-center mt-5 py-2">1. Partage du pouvoir et des décisions</h1>
    </header>
    <div class="puclic-stats-body me-0 ms-0 me-sm-5 ms-sm-5 p-sm-5 mt-5 pt-5 pt-sm-0">
        <!-- IMPACT 3 -->

        <h3 id="impact3" class="mt-3 mt-sm-5">Capital humain et qualité de vie au travail</h3>
        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5"><b class="text-primary">I.</b> <u class="text-secondary text-decoration-none">Qualité de vie</u> au travail / <u class="text-secondary text-decoration-none">épanouissement</u> des salariés</h4>

        <div class="row">
            <div class="col">
                <% unless @qualite_qvt_enquete_qvt.nil? %>
                    <div class="col">
                        <div class="rounded shadow col-12 col-mb-5 p-0 overflow-hidden mb-5">
                            <div class="bg-white m-0 p-2">
                                <div class="d-flex">
                                    <%= pie_chart @qualite_qvt_enquete_qvt, suffix: '%' %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="col">
                <div class="rounded shadow col-12 p-0 overflow-hidden mb-5 d-flex flex-column">
                    <div class="bg-light text-center p-3"><%= indicateur_clean :qualite_qvt_moyenne_anciennete %></div>
                    <div class="bg-white m-0 p-2">
                        <div class="d-flex justify-content-center">
                            <p class="h1"><%= @qualite_qvt_moyenne_anciennete %> ans</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="rounded shadow p-0 overflow-hidden mb-5">
            <div class="bg-light fw-bold text-center p-3">Taux médians</div>
            <div class="bg-white m-0 p-2">
                <div class="d-flex">
                    <%= bar_chart @qualite_qvt_taux_all, suffix: "%" %>
                </div>
            </div>
        </div>

        <h4 class="mt-3 mb-3 mt-sm-5 mb-sm-5">
            <b class="text-primary">II.</b>
            Développement des <u class="text-secondary text-decoration-none">compétences individuelles et collectives</u><br/>
            <u class="text-secondary text-decoration-none">Emancipation</u> des salariés
        </h4>

        <div class="rounded shadow col-12 p-0 overflow-hidden mb-5 d-flex flex-column">
            <div class="bg-light text-center p-3"><%= indicateur_clean :qualite_emancipation_moyenne_heures_formation %></div>
            <div class="bg-white m-0 p-2">
                <div class="d-flex justify-content-center">
                    <p class="h1"><%= @qualite_emancipation_moyenne_heures_formation %> heures</p>
                </div>
            </div>
        </div>

        <div class="rounded shadow p-0 overflow-hidden mb-5">
            <div class="bg-light fw-bold text-center p-3">Taux médians</div>
            <div class="bg-white m-0 p-2">
                <div class="d-flex">
                    <%= bar_chart @qualite_emancipation_taux, suffix: "%" %>
                </div>
            </div>
        </div>
    </div>
</div>