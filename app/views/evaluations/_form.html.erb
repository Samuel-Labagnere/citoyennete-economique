<% disable = "disabled" unless !defined?(disabled) || disabled != true %>

<%= simple_form_for @evaluation do |f| %>
  <fieldset <%= disable %>>
    <%= f.input :annee %>
    <%= f.input :chiffre_affaires %>
    <%= f.input :resultat_net %>
    <%= f.input :nombre_salaries %>
    <%= f.input :nombre_salaries_etp %>
  </fieldset>

  <fieldset class="border p-2 mb-4" <%= disable %>>
    <legend class="w-auto">Pilier 1 : Partage du pouvoir et des décisions</legend>
    <%= f.input :pouvoir_gouvernance_part_salaries_associes %>
    <%= f.input :pouvoir_gouvernance_taux_societariat_femmes %>
    <%= f.input :pouvoir_gouvernance_taux_droits_vote_salaries %>
    <%= f.input :pouvoir_gouvernance_part_salaries_conseil %>
    <%= f.input :pouvoir_gouvernance_part_femmes_conseil %>
    <%= f.input :pouvoir_gouvernance_diversite_categories, as: :check_boxes, collection: ['Salariés', 'Investisseurs'], include_hidden: false %>
    <%= f.input :pouvoir_democratie_nombre_reunions %>
    <%= f.input :pouvoir_democratie_taux_participation_formations %>
    <%= f.input :pouvoir_democratie_nombre_accords_signes %>
    <%= f.input :pouvoir_democratie_accords_signes %>
    <%= f.input :pouvoir_strategique_taux_presence_assemblee %>
    <%= f.input :pouvoir_strategique_implication_partage %>
    <%= f.input :pouvoir_strategique_actifs_total %>
    <%= f.input :pouvoir_estimation_realite %>
  </fieldset>

  <fieldset class="border p-2 mb-4" <%= disable %>>
    <legend class="w-auto">Pilier 2 : Pérénnité économique et partage de la valeur créée</legend>
    <%= f.input :valeur_perennite_part_capital_salaries %>
    <%= f.input :valeur_perennite_existence_reserve, as: :radio_buttons %>
    <%= f.input :valeur_perennite_reserve_impartageable, as: :radio_buttons %>
    <%= f.input :valeur_perennite_part_resultat_reserve %>
    <%= f.input :valeur_perennite_ebe_caht %>
    <%= f.input :valeur_perennite_part_endettement %>
    <%= f.input :valeur_perennite_attention_questions_innovation, as: :radio_buttons %>
    <%= f.input :valeur_partage_part_resultat_net_actionnaires %>
    <%= f.input :valeur_partage_existence_accord, as: :radio_buttons %>
    <%= f.input :valeur_partage_existence_epargne_salariale, as: :radio_buttons %>
    <%= f.input :valeur_partage_part_resultat_salaries %>
    <%= f.input :valeur_partage_existence_grille_salariale, as: :radio_buttons %>
    <%= f.input :valeur_partage_publicite_grille, as: :radio_buttons %>
    <%= f.input :valeur_partage_ecart_revenus_hauts_bas %>
    <%= f.input :valeur_partage_index_egalite_homme_femme %>
    <%= f.input :valeur_estimation_realite %>
  </fieldset>

  <fieldset class="border p-2 mb-4" <%= disable %>>
    <legend class="w-auto">Pilier 3 : Capital humain et qualité de vie au travail</legend>
    <%= f.input :qualite_qvt_enquete_qvt, as: :radio_buttons %>
    <%= f.input :qualite_qvt_taux_qvt %>
    <%= f.input :qualite_qvt_part_cdi %>
    <%= f.input :qualite_qvt_moyenne_anciennete %>
    <%= f.input :qualite_qvt_taux_turnover %>
    <%= f.input :qualite_qvt_taux_absenteisme %>
    <%= f.input :qualite_emancipation_moyenne_heures_formation %>
    <%= f.input :qualite_emancipation_taux_budget_formation_masse_salariale %>
    <%= f.input :qualite_emancipation_taux_direction_promotion_interne %>
    <%= f.input :qualite_estimation_realite %>
  </fieldset>

  <fieldset class="border p-2 mb-4" <%= disable %>>
    <legend class="w-auto">Pilier 4 : Impact environnemental, social et territorial</legend>
    <%= f.input :impact_environnement_audit_impact, as: :radio_buttons %>
    <%= f.input :impact_environnement_demarche_ecologique, as: :radio_buttons %>
    <%= f.input :impact_environnement_part_energies_renouvelables %>
    <%= f.input :impact_environnement_part_salaries_mobilite %>
    <%= f.input :impact_environnement_discussion_impact, as: :radio_buttons %>
    <p>Calculez-vous le bilan carbone ?<p>
    <%= f.input :impact_environnement_bilan_carbone_scope_1 %>
    <%= f.input :impact_environnement_bilan_carbone_scope_2 %>
    <%= f.input :impact_environnement_bilan_carbone_scope_3 %>
    <%= f.input :impact_social_part_activite_structures_insertion %>
    <%= f.input :impact_social_alternance_apprentissage %>
    <%= f.input :impact_social_part_seniors %>
    <%= f.input :impact_social_part_handicap %>
    <%= f.input :impact_engagement_part_resultat_missions_utiles %>
    <%= f.input :impact_engagement_part_placements_responsables %>
    <%= f.input :impact_engagement_part_impots_france %>
    <%= f.input :impact_engagement_demarche_ethique_fournisseurs, as: :radio_buttons %>
    <%= f.input :impact_estimation_realite %>
  </fieldset>

  <% unless disable == "disabled" %>
    <%= f.button :submit, "Enregistrer", class: 'btn btn-primary' %>
  <% end %>
<% end %>