<h1>Evaluation de l'année <%= @evaluation.annee%></h1>
<div class="mb-3">
  <%= link_to "Éditer cette évaluation", evaluation_builder_path(@evaluation.id, 'informations'), class: "btn btn-primary me-3 mb-3 mb-sm-0" %>
  <% path = current_user.is_super_admin ? evaluations_path : user_root_path %>
  <%= link_to "Retourner au dashboard", path, class: "btn btn-secondary" %>
</div>

<%= render "evaluation", evaluation: @evaluation %>

<%= button_to "Supprimer cette évaluation", @evaluation, method: :delete, class: "btn btn-danger", form: { data: { confirm: "Êtes-vous sûr de vouloir supprimer l'évaluation de #{@evaluation.annee}?" } } %>
<div class="m-5 p-5 d-flex justify-content-center">
</div>
