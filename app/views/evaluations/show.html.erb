<div class="page-orga show mt-5 mt-sm-0 pt-5 pt-sm-0">

  <header class="me-3 me-sm-5 ms-3 ms-sm-5 p-5">
    <h1>Evaluation de l'année <%= @evaluation.annee%></h1>
  </header>

  <div class="d-flex flex-sm-row flex-column align-items-center justify-content-between me-3 me-sm-5 ms-3 ms-sm-5 pe-5 ps-5 pb-5">

    <div>
      <%= link_to "Edit this evaluation", edit_evaluation_path(@evaluation), class: "btn btn-primary me-3" %>
      <% if current_user.is_super_admin %>
        <%= link_to "Back to evaluations", evaluations_path, class: "btn btn-secondary me-3" %>
      <% else %>
        <%= link_to "Back to dashboard", user_root_path, class: "btn btn-secondary me-3" %>
      <% end %>
    </div>
  </div>

  <%= render "form", evaluation: @evaluation, disabled: true %>

  <div>

  </div>

<%= button_to "Destroy this evaluation", @evaluation, method: :delete, class: "btn rounded white pt-1 pb-1 pe-3 ps-3 btn-danger", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer l'évaluation de #{@evaluation.annee}?" } } %>
