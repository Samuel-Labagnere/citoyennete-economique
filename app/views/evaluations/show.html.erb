<div class="row">
  <div class="col-lg-8">
    <h1>
      Evaluation de l'année <%= @evaluation.annee%>
    </h1>
  </div>
</div>

<div class="d-flex">
  <%= render "evaluation", evaluation: @evaluation %>
</div>


<%= button_to "Supprimer cette évaluation", @evaluation, method: :delete, class: "btn rounded white btn-danger mx-auto d-flex", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer l'évaluation de #{@evaluation.annee}?" } } %>
