<div class="d-flex mb-4">
  <%= link_to 'Éditer cette évaluation', evaluation_builder_path(@evaluation.id, 'informations'), class: 'btn btn-primary text-white me-4' %>
  <%= link_to 'Retourner au dashboard', user_root_path, class: 'btn btn-secondary' %>
</div>

<div class="row">
  <div class="col-lg-8">
    <h1>
      Evaluation de l'année <%= @evaluation.annee%>
    </h1>
  </div>
</div>

<div class="d-flex">
  <%= render "evaluation", evaluation: @evaluation %>
</div>


<%= button_to "Supprimer cette évaluation", @evaluation, method: :delete, class: "btn rounded text-white btn-danger mx-auto d-flex", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer l'évaluation de #{@evaluation.annee}?" } } %>
