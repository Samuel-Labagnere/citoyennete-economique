<div class="page-orga show mt-5 mt-sm-0 pt-5 pt-sm-0">

  <header class="me-3 me-sm-5 ms-3 ms-sm-5 p-5">
    <h1 class="h2">Objectifs</h1>
  </header>

  <div class="d-flex flex-sm-row flex-column align-items-center justify-content-between me-3 me-sm-5 ms-3 ms-sm-5 pe-5 ps-5 pb-5">

    <div>
      <%= link_to "Edit this objectifs_list", edit_objectifs_list_path(@objectifs_list), class: "btn btn-primary me-3" %>
      <% if current_user.is_super_admin %>
        <%= link_to "Back to objectifs_lists", objectifs_lists_path, class: "btn btn-secondary me-3" %>
      <% else %>
        <%= link_to "Retourner au dashboard", user_root_path, class: "btn btn-secondary me-3" %>
      <% end %>
    </div>
  </div>

  <%= render "form", objectifs_list: @objectifs_list, disabled: true %>
  <%= button_to "Supprimer ces objectifs", @objectifs_list, method: :delete, class: "btn rounded white pt-1 pb-1 pe-3 ps-3 btn-danger", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer vos objectifs ?" } } %>

</div>