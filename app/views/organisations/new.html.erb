<div class="page-orga mx-3 mx-sm-5 mx-bg-5 mt-5 pt-2">

  <header class="mt-5 mt-sm-0 mb-5 m-3 m-sm-0">
    <h1 class="h2">Inscrire une organisation</h1>
  </header>


  <% if current_user.organisation.nil? || current_user.is_super_admin %>
    <%= render "form", organisation: @organisation %>
  <% end %>
  <br>

  <div class="d-flex flex-sm-row flex-column align-items-sm-center justify-content-center mt-4 me-3 me-sm-5 ms-3 ms-sm-5 pe-5 ps-5 pb-5">
    <%= link_to "Back to organisations", organisations_path, class: "btn rounded light pt-1 pb-1 pe-3 ps-3 btn-secondary mt-4" %>
  </div>

</div>
