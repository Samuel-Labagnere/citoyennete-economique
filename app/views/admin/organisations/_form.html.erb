<div class="view">
  <%= simple_form_for [:admin, @organisation] do |f| %>
    <div class="row my-5">
      <div class="col-sm-4">
        <%= f.input :nom, autocomplete: 'nom' %>
      </div>
      <div class="col-sm-4">
        <%= f.input :statut_juridique, collection: Organisation.statut_juridiques.keys %>
      </div>
      <div class="col-sm-4">
        <%= f.input :date_creation %>
      </div>
      <div class="col-sm-4">
        <%= f.input :secteur_activite, autocomplete: 'secteur-activite' %>
      </div>
      <div class="col-sm-4">
        <%= f.input :naf, autocomplete: 'naf' %>
      </div>
      <div class="col-sm-4">
        <%= f.input :siren, autocomplete: 'siren' %>
      </div>
      <div class="col-sm-4">
        <%= f.input :agrement_specifique, autocomplete: 'agrement-specifique' %>
      </div>
    </div>

    <div class="row my-5">
      <div class="col-sm-4 col-input">
        <%= f.input :objectifs_extra_financiers, as: :radio_buttons %>
      </div>
      <div class="col-sm-4">
        <%= f.input :distinctions, autocomplete: 'distinctions' %>
      </div>
      <div class="col-sm-4">
        <%= f.input :valeurs_entreprise, autocomplete: 'valeurs-entreprise' %>
      </div>
    </div>

    <div class="text-center my-5">
      <%= f.button :submit, "Enregistrer", class: 'btn btn-primary shadow' %>
    </div>
  <% end %>
</div>
<script>
  function toggleRadio(event) {
    if(event.target.type === 'radio' && event.target.checked === true) {
      setTimeout(()=>{ event.target.checked = false; },0);
    }
  }
document.addEventListener('mouseup', toggleRadio);
</script>
