<h1>Informations</h1>

<%= simple_form_for @evaluation, url: admin_evaluation_builder_path, method: :post do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row">
    <div class="col-md-4 mb-4">
      <%= f.input :annee %>
    </div>
    <div class="col-md-4 mb-4">
      <%= f.input :chiffre_affaires %>
    </div>
    <div class="col-md-4 mb-4">
      <%= f.input :resultat_net %>
    </div>
    <div class="col-md-4 mb-4">
      <%= f.input :nombre_salaries %>
    </div>
    <div class="col-md-4 mb-4">
      <%= f.input :nombre_salaries_etp %>
    </div>
  </div>
  <%= f.button :submit, 'Enregistrer', class: 'btn btn-primary' %>
<% end %>
