<div class="row">
  <div class="col-lg-8">
    <h1>
      Evaluation de l'année <%= @evaluation.annee%>
    </h1>
  </div>
</div>

<%= link_to 'Afficher les résultats', admin_resultats_path(@evaluation), class: 'btn btn-primary' %>

<%= render "evaluation", evaluation: @evaluation %>

  <%= button_to "Supprimer cette évaluation",
                [:admin, @evaluation],
                method: :delete,
                class: "btn btn-danger mb-5",
                form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer l'évaluation de #{@evaluation.annee}?" } } %>
