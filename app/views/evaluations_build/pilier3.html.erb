<div class="page-orga mx-3 mx-sm-5 mx-bg-5 mt-5 pt-2">

  <header class="mb-5">
    <% if @evaluation.status != 'active' %>
      <h1 class="h2">Nouvelle évaluation</h1>
    <% else %>
      <h1 class="h2">Édition de l'évaluation de l'année <%= @evaluation.annee %></h1>
    <% end %>
    <h2 class="h3"><span class="text-secondary fs-2 me-1 m-0">3.</span>Capital humain et qualité de vie au travail</h2>
  </header>
  
  <%= simple_form_for @evaluation, url: wizard_path, method: :put, data: {turbo: false} do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.association :indicateurs_list do |il| %>

    <div class="container-fluid w-100 d-flex flex-wrap justify-content-center">

      <div class="col-6">

        <h3 class="text-primary">Mise en place des conditions du bon exercice de la démocratie</h3>

        <fieldset class=" pt-5 pb-4 mt-2 mb-5 col-sm-10 d-flex flex-column justify-content-between align-items-center rounded bg-white shadow">
          <div class="col-8 col-sm-10 col-input">

            <div class="mb-3"><%= il.input :qualite_qvt_enquete_qvt, as: :radio_buttons %></div>
            <div class="mb-3"><%= il.input :qualite_qvt_taux_qvt %></div>
            <div class="mb-3"><%= il.input :qualite_qvt_part_cdi %></div>

          </div>
          <div class="col-8 col-sm-10 pb-3">

            <div class="mb-3"><%= il.input :qualite_qvt_moyenne_anciennete %></div>
            <div class="mb-3"><%= il.input :qualite_qvt_taux_turnover %></div>
            <div class="mb-3"><%= il.input :qualite_qvt_taux_absenteisme %></div>

          </div>
        </fieldset>

      </div>

      <div class="col-6">

        <h3 class="text-primary">Développement des compétences individuelles et collectives, émancipation des salariés</h3>

        <fieldset class=" pt-5 pb-4 mt-2 mb-2 col-sm-10 d-flex flex-column mb-4 m-0 row-cols-2 justify-content-between align-items-center rounded bg-white shadow">
          <div class="col-8 col-sm-10 col-input pb-3">

            <div class="mb-3"><%= il.input :qualite_emancipation_moyenne_heures_formation %></div>
            <div class="mb-3"><%= il.input :qualite_emancipation_taux_budget_formation_masse_salariale %></div>
            <div class="mb-3"><%= il.input :qualite_emancipation_taux_direction_promotion_interne %></div>

          </div>
        </fieldset>

        <div class="estim col-8 col-sm-10 text-break rounded bg-white shadow border-start border-secondary pt-3 pb-3 pe-5 ps-5 mt-3 mb-5 col-input">
            <%= il.input :qualite_estimation_realite %>
        </div>
    <% end %>

    </div>

  </div>

  <div class="d-flex">
          <%= link_to 'Précédent', wizard_path(@previous_step), class: 'btn btn-primary me-auto ms-auto d-flex mb-5' %>
          <%= f.button :submit, "Suivant", class: 'btn btn-primary me-auto ms-auto d-flex mb-5' %>
  </div>

  <% end %>

</div>