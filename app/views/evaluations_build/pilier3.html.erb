<div class="page-orga mx-3 mx-sm-5 mx-bg-5 mt-5 pt-2">

  <header class="mb-5">
    <h1 class="h2">Nouvelle évaluation</h1>
    <h2 class="h3"><span class="text-secondary fs-2 me-1 m-0">3.</span>Capital humain et qualité de vie au travail</h2>
  </header>
  
  <%= simple_form_for @evaluation, url: wizard_path, method: :put, data: {turbo: false} do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.association :indicateurs_list do |il| %>
        <h2 class="accordion-header col-sm-10 mx-auto">Mise en place des conditions du bon exercice de la démocratie</h2>
        <fieldset class="mt-3 mb-2 col-sm-10 d-flex flex-column justify-content-between align-items-center rounded bg-white shadow">
          <div class="col-8 col-sm-10 col-input">
            <%= il.input :qualite_qvt_enquete_qvt, as: :radio_buttons %>
            <%= il.input :qualite_qvt_taux_qvt %>
            <%= il.input :qualite_qvt_part_cdi %>
          </div>
          <div class="col-8 col-sm-10">
            <%= il.input :qualite_qvt_moyenne_anciennete %>
            <%= il.input :qualite_qvt_taux_turnover %>
            <%= il.input :qualite_qvt_taux_absenteisme %>
          </div>
        </fieldset>


        <h2 class="accordion-header col-sm-10 mx-auto" id="panelsStayOpen-headingOne">
            <button class="accordion-button collapsed bg-white rounded-end p-4 form-border rounded border-primary shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#condition_democratie" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
            <h3 class="text-primary">Développement des compétences individuelles et collectives<br/>Émancipation des salariés</h3>
            </button>
        </h2>
        <fieldset class="mt-3 mb-2 col-sm-10 d-flex flex-column mb-4 m-0 row-cols-2 justify-content-between align-items-center rounded bg-white shadow">
          <div class="col-8 col-sm-10 col-input">
            <%= il.input :qualite_emancipation_moyenne_heures_formation %>
            <%= il.input :qualite_emancipation_taux_budget_formation_masse_salariale %>
            <%= il.input :qualite_emancipation_taux_direction_promotion_interne %>
          </div>
        </fieldset>

        <div class="estim col-8 col-sm-7 text-break me-auto ms-auto rounded bg-white shadow border-start border-secondary pt-1 pb-1 pe-5 ps-5 mt-3 mb-5 col-input">
            <%= il.input :qualite_estimation_realite %>
        </div>
    <% end %>

    <div class="d-flex">
        <%= link_to 'Précédent', wizard_path(@previous_step), class: 'btn btn-primary me-auto ms-auto d-flex mb-5' %>
        <%= f.button :submit, "Suivant", class: 'btn btn-primary me-auto ms-auto d-flex mb-5' %>
    </div>
  <% end %>

</div>