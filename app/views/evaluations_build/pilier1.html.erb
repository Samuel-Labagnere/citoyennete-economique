<div class="page-orga mx-3 mx-sm-5 mx-bg-5 mt-5 pt-2">

  <header class="mb-5">
    <h1 class="h2">Nouvelle évaluation</h1>
    <h2 class="h3"><span class="text-secondary fs-2 me-1 m-0">1.</span> Partage du pouvoir et des décisions</h2>
  </header>
  
  <%= simple_form_for @evaluation, url: wizard_path, method: :put, data: {turbo: false} do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.association :indicateurs_list do |il| %>
        <h2 class="accordion-header col-sm-10 mx-auto">Composition de la gouvernance</h2>
            <fieldset class="mt-3 mb-2 col-sm-10 d-flex flex-column justify-content-between align-items-center rounded bg-white shadow">
            <%# <legend class="w-auto">Pilier 1 : Partage du pouvoir et des décisions</legend> %>
            <div class="col-sm-10 col-8">
                <%= il.input :pouvoir_gouvernance_part_salaries_associes %>
                <%= il.input :pouvoir_gouvernance_taux_societariat_femmes %>
                <%= il.input :pouvoir_gouvernance_taux_droits_vote_salaries %>
                <%= il.input :pouvoir_gouvernance_part_salaries_conseil %>
                <%= il.input :pouvoir_gouvernance_part_femmes_conseil %>
            </div>
            <div class="w-100 mb-5 me-auto ms-auto list-diversite">
                <%= il.input :pouvoir_gouvernance_diversite_categories, as: :check_boxes, collection: ['Salariés', 'Investisseurs', 'Fournisseurs', 'Sous-traitants', 'Clients', 'Experts', 'Syndicats', 'Pouvoirs publics', 'Associations', 'Grand public', 'Autres'], include_hidden: false %>
            </div>
            </fieldset>


        <h2 class="accordion-header col-sm-10 mx-auto" id="panelsStayOpen-headingOne">
            <button class="accordion-button collapsed bg-white rounded-end p-4 form-border rounded border-primary shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#condition_democratie" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
            <h3 class="text-primary">Mise en place des conditions du bon exercice de la démocratie</h3>
            </button>
        </h2>
            <fieldset class="mt-3 mb-2 col-sm-10 d-flex flex-column mb-4 m-0 row-cols-2 justify-content-between align-items-center rounded bg-white shadow">
                <div class="col-8 col-sm-10">
                <%= il.input :pouvoir_democratie_nombre_reunions %>
                <%= il.input :pouvoir_democratie_taux_participation_formations %>
                </div>
                <div class="col-8 col-sm-10">
                <%= il.input :pouvoir_democratie_nombre_accords_signes %>
                <%= il.input :pouvoir_democratie_accords_signes %>
                </div>
            </fieldset>


        <h2 class="accordion-header col-sm-10 mx-auto" id="panelsStayOpen-headingOne">
            <button class="accordion-button collapsed bg-white rounded-end p-4 form-border rounded border-primary shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#partage_decision" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
            <h3 class="text-primary">Participation à la prise de décision stratégique</h3>
            </button>
        </h2>
            <fieldset class="mt-3 mb-2 col-sm-10 d-flex flex-column mb-4 m-0 row-cols-2 justify-content-between align-items-center rounded bg-white shadow">
                <div class="col-8 col-sm-10">
                <%= il.input :pouvoir_strategique_taux_presence_assemblee %>
                <%= il.input :pouvoir_strategique_implication_partage %>
                </div>
                <div class="col-8 col-sm-10">
                <%= il.input :pouvoir_strategique_actifs_total %>
                </div>
            </fieldset>

        <div class="estim col-8 col-sm-7 text-break me-auto ms-auto rounded bg-white shadow border-start border-secondary pt-1 pb-1 pe-5 ps-5 mt-3 mb-5 col-input">
            <%= il.input :pouvoir_estimation_realite %>
        </div>
    <% end %>

    <div class="d-flex">
        <%= button_to 'Précédent', wizard_path(@previous_step), class: 'btn btn-primary me-auto ms-auto d-flex mb-5' %>
        <%= f.button :submit, "Suivant", class: 'btn btn-primary me-auto ms-auto d-flex mb-5' %>
    </div>
  <% end %>

</div>