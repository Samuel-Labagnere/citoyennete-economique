<div class="page-orga mx-3 mx-sm-5 mx-bg-5 mt-5 pt-2">

  <header class="mb-5">
    <% if @evaluation.status != 'active' %>
        <h1 class="h2">Nouvelle évaluation</h1>
    <% else %>
        <h1 class="h2">Édition de l'évaluation de l'année <%= @evaluation.annee %></h1>
    <% end %>
    <h2 class="h3"><span class="text-secondary fs-2 me-1 m-0">1.</span> Partage du pouvoir et des décisions</h2>
  </header>

  <%= simple_form_for @evaluation, url: wizard_path, method: :put do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.association :state do |il| %>

    <div class="container-fluid w-100 d-flex flex-wrap justify-content-center">

        <div class="col-5">
            <h3 class="text-primary">Composition de la gouvernance</h3>

            <fieldset class="mt-3 mb-2 col-sm-10 d-flex flex-column justify-content-between align-items-center rounded bg-white shadow">
            <%# <legend class="w-auto">Pilier 1 : Partage du pouvoir et des décisions</legend> %>
            <div class="col-sm-10 col-8 pt-4">
                <div class="mb-3"><%= il.input :pouvoir_gouvernance_part_salaries_associes %></div>
                <div class="mb-3"><%= il.input :pouvoir_gouvernance_taux_societariat_femmes %></div>
                <div class="mb-3"><%= il.input :pouvoir_gouvernance_taux_droits_vote_salaries %></div>
                <div class="mb-3"><%= il.input :pouvoir_gouvernance_part_salaries_conseil %></div>
                <div class="mb-3"><%= il.input :pouvoir_gouvernance_part_femmes_conseil %></div>
            </div>
            <div class="pb-4 ms-3 list-diversite">
                <%= il.input :pouvoir_gouvernance_diversite_categories, as: :check_boxes, collection: ['Salariés', 'Investisseurs', 'Fournisseurs', 'Sous-traitants', 'Clients', 'Experts', 'Syndicats', 'Pouvoirs publics', 'Associations', 'Grand public', 'Autres'], include_hidden: false %>
            </div>
            </fieldset>
        </div>

        <div class="col-5">
            <h3 class="text-primary">Conditions du bon exercice de la démocratie</h3>

            <fieldset class="mt-3 mb-2 col-sm-10 d-flex flex-column mb-4 m-0 row-cols-2 justify-content-between align-items-center rounded bg-white shadow">
                <div class="col-8 col-sm-10 pt-4">
                    <div class="mb-3"><%= il.input :pouvoir_democratie_nombre_reunions %></div>
                    <div class="mb-3"><%= il.input :pouvoir_democratie_taux_participation_formations %></div>
                </div>
                    <div class="col-8 col-sm-10 pb-4">
                    <div class="mb-3"><%= il.input :pouvoir_democratie_nombre_accords_signes %></div>
                    <div class="mb-3"><%= il.input :pouvoir_democratie_accords_signes %></div>
                </div>
            </fieldset>
        </div>

        <div class="col-5">

            <h3 class="text-primary mt-5">Participation à la prise de décision stratégique</h3>

            <fieldset class="mt-3 mb-2 col-sm-10 d-flex flex-column mb-4 m-0 row-cols-2 justify-content-between align-items-center rounded bg-white shadow">
                <div class="col-8 col-sm-10 pt-4">
                    <div class="mb-3"><%= il.input :pouvoir_strategique_taux_presence_assemblee %></div>
                    <div class="mb-3"><%= il.input :pouvoir_strategique_implication_partage %></div>
                </div>
                <div class="col-8 col-sm-10">
                    <div class="mb-3"><%= il.input :pouvoir_strategique_actifs_total %></div>
                </div>
            </fieldset>


            <div class="estim col-8 col-sm-10 text-break rounded bg-white shadow border-start border-secondary pt-1 pb-1 pe-4 ps-4 mt-3 mb-5 col-input">
                <div class="mb-3 mt-3"><%= il.input :pouvoir_estimation_realite %></div>
            </div>
        </div>

    </div>

    <% end %>

    <div class="d-flex">
        <%= link_to 'Précédent', wizard_path(@previous_step), class: 'btn btn-primary me-auto ms-auto d-flex mb-5' %>
        <%= f.button :submit, "Suivant", class: 'btn btn-primary me-auto ms-auto d-flex mb-5' %>
    </div>
  <% end %>

</div>
