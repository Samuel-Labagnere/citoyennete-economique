<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="row">
  <div class="col-lg-8 mx-auto">
    <h1 class="text-center">
      Inscription
    </h1>
  </div>
</div>


<div class="row my-5">
  <div class="col-5 mx-auto">
    <%= render 'shared/small_error_message', object: f.object %>
    <div>
      <div class="form-outline flex-fill mb-3">
        <%= f.input :first_name, class:"form-control alataFont" %>
      </div>
      <div class="form-outline flex-fill mb-3">
        <%= f.input :last_name, class:"form-control" %>
      </div>
      <div class="form-outline flex-fill mb-3">
          <%= f.input :email, class:"form-control " %>
      </div>
      <div class="form-outline flex-fill mb-3">
        <%= f.input :password, hint: "#{@minimum_password_length} caractères minimum", class: "form-control" %>
      </div>
      <div class="form-outline flex-fill mb-3">
        <%= f.input :password_confirmation %>
      </div>
      <div class="form-check d-flex mb-5 ms-4 mt-5">
        <input
          class="form-check-input me-2"
          type="checkbox"
          value=""
          id="agree"
        />
        <label class="form-check-label" for="agree">
          J'ai lu et j'accepte les <a href="#!" class="link-primary">Conditions générales d'utilisation</a>
        </label>
      </div>

        <div class="text-center">
          <%= f.submit "S'inscrire", id: 'btn-submit', class: "btn btn-primary" %>
        </div>
        <div class="text-center mt-4">
          <p class="me-2 text-center">Vous avez déjà un compte ?</p>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>

  var inputAgree = document.getElementById("agree"),
      btnSubmit = document.getElementById("btn-submit");
  btnSubmit.disabled = true;
  inputAgree.onclick = function(){
      if(inputAgree.checked){
          btnSubmit.disabled = false;
      }
      else{
          btnSubmit.disabled = true;
      }
  };
 </script>
