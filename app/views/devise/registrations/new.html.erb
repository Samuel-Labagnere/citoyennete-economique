

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
              <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
      
                      <h1 class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Inscription </h1>
      
         
                        <div class="row">
                            <div class="col">
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                      <%= f.input :first_name, class:"form-control " %>
                                    </div>
                                  </div>
                            </div>
                            <div class="col">
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                      <%= f.input :last_name, class:"form-control " %>
                                    </div>
                                  </div>
                            </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <%= f.input :email, class:"form-control" %>
                        </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <%= f.input :password, hint: "#{@minimum_password_length} caractères minimum", class: "form-control" %>
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <%= f.input :password_confirmation %>
                          </div>
                        </div>
      
                        <div class="form-check d-flex mb-5">
                          <input
                            class="form-check-input me-2"
                            type="checkbox"
                            value=""
                            id="form2Example3c"
                          />
                          <label class="form-check-label" for="form2Example3">
                            J'ai lu et j'accepte les <a href="#!">Conditions générales d'utilisation</a>
                          </label>
                        </div>
      
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                          <%= f.submit "S'inscrire", class: "btn btn-primary btn-lg" %>
                        </div>
                        <div class="d-flex justify-content-center  mb-3 mb-lg-4 p-3">
                          <p>Vous avez déjà un compte ?</p>
                          <%= render "devise/shared/links" %>
                        </div>

      
                      </form>
      
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
<% end %>