

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


<section class=" mt-5 mb-5" >
        <div class="container" >
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
              <div class="text-black">
                <div class="p-md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                      <%= render 'shared/small_error_message', object: f.object %>

                      <h1 class="h2 text-center mb-5 mx-1 mx-md-4 mt-4">Inscription </h1>


                        <div class="row">
                            <div class="col">
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                      <%= f.input :first_name, class:"form-control alataFont" %>
                                    </div>
                                  </div>
                            </div>
                            <div class="col">
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                      <%= f.input :last_name, class:"form-control" %>
                                    </div>
                                  </div>
                            </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                          <div class="form-outline flex-fill mb-0">
                            <%= f.input :email, class:"form-control " %>
                        </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                          <div class="form-outline flex-fill mb-0">
                            <%= f.input :password, hint: "#{@minimum_password_length} caractères minimum", class: "form-control" %>
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                          <div class="form-outline flex-fill mb-0">
                            <%= f.input :password_confirmation %>
                          </div>
                        </div>

                        <div class="form-check d-flex mb-5 ms-4">
                          <input
                            class="form-check-input me-2"
                            type="checkbox"
                            value=""
                            id="agree"
                          />
                          <label class="form-check-label" for="agree">
                            J'ai lu et j'accepte les <a href="#!" class="link-primary">Conditions générales d'utilisation</a>
                          </label>
                        </div>

                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                          <%= f.submit "S'inscrire", id: 'btn-submit', class: "btn btn-primary btn-lg" %>
                        </div>
                        <div class="d-flex justify-content-center  mb-3 mb-lg-4 p-3">
                          <p class="me-2">Vous avez déjà un compte ?</p>
                          <%= render "devise/shared/links" %>
                        </div>


                      </form>

                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
<% end %>

<script>

  var inputAgree = document.getElementById("agree"),
      btnSubmit = document.getElementById("btn-submit");
  btnSubmit.disabled = true;
  inputAgree.onclick = function(){
      if(inputAgree.checked){
          btnSubmit.disabled = false;
      }
      else{
          btnSubmit.disabled = true;
      }
  };
 </script>
