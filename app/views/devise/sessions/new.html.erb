<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<section class=" mt-5 mb-5" >
        <div class="container" >
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11" 
              <div class="card text-black">
                <div class="card-body p-md-5"">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
      
                      <h1 class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Connexion</h1>
      
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <div class="form-outline flex-fill mb-0">
                            <%= f.input :email, autocomplete: "email", class:"formLabel" %>
                        </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-0">
                          <div class="form-outline flex-fill mb-0">
                              <%= f.input :password, autocomplete: "current-password" %>
                          </div>
                        </div>
                         <% if devise_mapping.recoverable? %>
                          <div class="mb-5">
                            <%= link_to 'Mot de passe oubliÃ© ?', new_password_path(resource_name) %>
                          </div>
                        <% end %>
      
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <%= f.submit "Se connecter", class: "btn btn-primary" %>
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                           <% if devise_mapping.rememberable? %>
                            <div class="field">
                              <%= f.check_box :remember_me %>
                              <%= f.label :remember_me %>
                            </div>
                            <% end %>
                        </div>

                        <% if devise_mapping.registerable? %>
                          <div class="mt-3 ">
                          <span>Vous n'avez pas de encore de compte ?</span>
                            <%= link_to "S'inscrire", new_registration_path(resource_name) %>
                          </div>
                        <% end %>


                      </form>
      
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
<% end %>