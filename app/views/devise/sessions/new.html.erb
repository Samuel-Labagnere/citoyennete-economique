<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <h1 class="text-center">
      Connexion
    </h1>
  </div>
</div>


<div class="row my-5">

  <div class="col-6 mx-auto">
    <div class="form-outline flex-fill mb-4">
      <%= f.input :email, autocomplete: "email", class:"formLabel" %>
    </div>

    <div class="form-outline flex-fill mb-4">
        <%= f.input :password, autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.recoverable? %>
    <div class="mb-5">
      <%= link_to 'Mot de passe oubliÃ© ?', new_password_path(resource_name), class: "link-primary" %>
    </div>
    <% end %>

    <div class="text-center mb-3">
        <%= f.submit "Se connecter", class: "btn btn-primary" %>
    </div>
    <div class="text-center">
        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>
    </div>

    <% if devise_mapping.registerable? %>
      <div class="mt-3 text-center">
      <span>Vous n'avez pas de encore de compte ?</span>
        <%= link_to "S'inscrire", new_registration_path(resource_name), class: "link-primary" %>
      </div>
    <% end %>
  </div>

<% end %>
